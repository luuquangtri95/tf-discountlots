{
  "name": "root",
  "version": "1.0",
  "description": "Shopify Themes builder",
  "author": "Ryderr",
  "license": "ISC",
  "type": "module",
  "main": "app/server.js",
  "scripts": {
    "dev": "concurrently  \"generating,tw,shopify\" -c \"blue,cyan,green\" \"nodemon  -w .env -w app/server.js -w app/server.js\" \"npm run tailwind\" \"npm run dev:cli\"",
    "dev:cli": "concurrently \"shopify theme dev -e=default\"",
    "tailwind": "npx tailwindcss -i ./app/styles/tailwind.scss -o ./assets/tailwind.css --watch"
  },
  "devDependencies": {
    "@shopify/cli": "^3.72.2",
    "@shopify/prettier-plugin-liquid": "^1.9.0",
    "autoprefixer": "^10.4.16",
    "chokidar": "^3.5.3",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.8",
    "esbuild-sass-plugin": "^2.16.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.13"
  },
  "dependencies": {
    "fastclick": "^1.0.6",
    "lazysizes": "^5.3.2",
    "localforage": "^1.10.0",
    "nouislider": "^15.8.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "swiper": "^11.2.5"
  }
}
